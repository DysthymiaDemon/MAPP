<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mapp.com.sg.projectattendancetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="Homepage">
        </activity>
        <activity android:name=".MarkAttendanceActivity"
            android:label="Mark Attendance">
        </activity>
        <activity android:name=".AttendanceSummaryActivity"
            android:label="Attendance Summary">
        </activity>
        <activity android:name=".ToEmployerActivity"
            android:label="To Employer">
        </activity>
        
    </application>

</manifest>